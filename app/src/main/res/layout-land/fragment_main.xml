<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal">
        android:dividerPadding="5dp"
        android:divider="?android:listDivider"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#5d5d5d"
                android:text="@string/team_a"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/score_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                tools:text="@string/score_a" />

            <Button
                android:id="@+id/add_3_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_3_a"
                android:layout_gravity="bottom|right" />
            <Button
                android:id="@+id/add_2_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_2_a"
                android:layout_gravity="bottom|right" />
            <Button
                android:id="@+id/free_throw_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/free_throw_a"
                android:layout_gravity="bottom|right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#5d5d5d"
                android:text="@string/team_b"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/score_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                tools:text="@string/score_b" />

            <Button
                android:id="@+id/add_3_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_3_b"
                android:layout_gravity="bottom|right" />
            <Button
                android:id="@+id/add_2_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_2_b"
                android:layout_gravity="bottom|right" />
            <Button
                android:id="@+id/free_throw_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/free_throw_b"
                android:layout_gravity="bottom|right" />
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/winner_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#32cd32"
        android:textSize="20sp"
        android:visibility="invisible"
        android:text="@string/winner"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="center|left" />
    <TextView
        android:id="@+id/winner_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="65dp"
        android:padding="10dp"
        android:textColor="#32cd32"
        android:textSize="20sp"
        android:visibility="invisible"
        android:text="@string/winner"

        android:layout_gravity="center|right" />
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#c2c2c2"
        android:textColor="@android:color/black"
        android:text="@string/reset"
        android:layout_gravity="center|left" />

    <Button
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:backgroundTint="#ffc862"
        android:textColor="@android:color/black"
        android:text="@string/game_over"
        android:layout_gravity="center|right"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="#ffc862"
        android:textColor="@android:color/black"
        android:text="@string/save"
        android:layout_gravity="center|right"
        android:layout_marginRight="70dp"
        android:visibility="invisible"
        />

</FrameLayout>