<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:dividerPadding="5dp"
        android:divider="?android:listDivider"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/winner_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#32cd32"
                android:textSize="20sp"
                android:visibility="invisible"
                android:text="@string/winner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/team_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#5d5d5d"
                        android:text="@string/team_a" />
                    <ImageView
                        android:id="@+id/teama_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerInside"
                        android:cropToPadding="true"
                        android:background="@android:color/darker_gray"/>
                    <ImageButton
                        android:id="@+id/teama_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_camera"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/score_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                tools:text="@string/score_a" />

            <Button
                android:id="@+id/add_3_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_3_a" />
            <Button
                android:id="@+id/add_2_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_2_a" />
            <Button
                android:id="@+id/free_throw_a"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/free_throw_a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/winner_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="#32cd32"
                android:textSize="20sp"
                android:visibility="invisible"
                android:text="@string/winner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/team_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#5d5d5d"
                        android:text="@string/team_b" />
                    <ImageView
                        android:id="@+id/teamb_photo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerInside"
                        android:cropToPadding="true"
                        android:background="@android:color/darker_gray"/>
                    <ImageButton
                        android:id="@+id/teamb_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_camera"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/score_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                tools:text="@string/score_b" />

            <Button
                android:id="@+id/add_3_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_3_b" />
            <Button
                android:id="@+id/add_2_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/add_2_b" />
            <Button
                android:id="@+id/free_throw_b"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#c2c2c2"
                android:textColor="@android:color/black"
                android:text="@string/free_throw_b" />
        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#c2c2c2"
        android:textColor="@android:color/black"
        android:text="@string/reset"
        />

    <Button
        android:id="@+id/game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#ffc862"
        android:textColor="@android:color/black"
        android:text="@string/game_over" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#ffc862"
        android:textColor="@android:color/black"
        android:text="@string/save"
        android:visibility="invisible"/>

</LinearLayout>