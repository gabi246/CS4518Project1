<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">
            <TextView
                android:id="@+id/game_number"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Game Number" />

            <TextView
                android:id="@+id/game_date"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="Game Date" />
        </LinearLayout>

        <ImageView
            android:id="@+id/game_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/parrot_icon"
            android:src="@drawable/parrot" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">
        <TextView
            android:id="@+id/game_teams"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Game Teams"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="60dp"
            />

        <TextView
            android:id="@+id/game_scores"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Game Scores" />
    </LinearLayout>

</LinearLayout>